<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/lightGray</item>
    </style>


    <style name="TransparentStatus" parent="AppTheme" />

    <style name="ItemStyle">
        <!--<item name="android:layout_height">@dimen/mine_item_height</item>-->
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/mine_item_padding</item>
        <item name="android:background">@drawable/bg_clickable</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ClickableItemStyle" parent="ItemStyle">
        <item name="android:clickable">true</item>
    </style>

    <style name="WorkItemStyle">
        <item name="android:layout_height">@dimen/work_item_height</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>

    </style>

    <style name="ItLabelStyle">
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>
